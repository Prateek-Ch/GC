  <body>
    <%- include("partials/header_two"); -%>
        <h1>Share Your Views</h1>
        <form class="" action="/blog/compose" method="post">
          <div class="form-group">
            <label><strong>Title</strong></label>
            <input class="form-control" type="text" name="postTitle">
